<script>
  const form = document.querySelector('#led-form');
  const buttonOn = document.querySelector('#led-on');
  const buttonOff = document.querySelector('#led-off');
  let ledIsOn = false;

  // Función para mostrar la alerta de encendido
  function showAlert(duration) {
    const alert = document.createElement('div');
    alert.style.backgroundColor = 'purple';
    alert.style.color = 'white';
    alert.style.padding = '10px';
    alert.style.position = 'fixed';
    alert.style.top = '20px';
    alert.style.right = '20px';
    alert.style.zIndex = '999';
    alert.innerHTML = 'El LED se ha encendido';

    document.body.appendChild(alert);

    setTimeout(() => {
      alert.remove();
    }, duration * 1000);
  }

  // Función para mostrar la alerta de apagado
  function showAlertOff(duration) {
    const alert = document.createElement('div');
    alert.style.backgroundColor = 'purple';
    alert.style.color = 'white';
    alert.style.padding = '10px';
    alert.style.position = 'fixed';
    alert.style.top = '20px';
    alert.style.right = '20px';
    alert.style.zIndex = '999';
    alert.innerHTML = 'El LED se ha apagado';

    document.body.appendChild(alert);

    setTimeout(() => {
      alert.remove();
    }, duration * 1000);
  }

  // Función para mostrar la alerta de LED encendido por más de 10 segundos
  function showLongAlert() {
    const alert = document.createElement('div');
    alert.style.backgroundColor = 'purple';
    alert.style.color = 'white';
    alert.style.padding = '10px';
    alert.style.position = 'fixed';
    alert.style.top = '50px';
    alert.style.right = '20px';
    alert.style.zIndex = '999';
    alert.innerHTML = 'El LED ha estado encendido por más de 10 segundos';

    document.body.appendChild(alert);

    setTimeout(() => {
      alert.remove();
    }, 5000);
  }

  // Cuando se presione el botón de encender, se envía una petición al servidor y se muestra la alerta de encendido
  buttonOn.addEventListener('click', () => {
    fetch('/led/on')
      .then(response => {
        console.log(response);
        showAlert(2);
        ledIsOn = true;
        setTimeout(() => {
          if (ledIsOn) {
            showLongAlert();
          }
        }, 10000);
      })
      .catch(error => console.error(error));
  });

  // Cuando se presione el botón de apagar, se envía una petición al servidor y se muestra la alerta de apagado
  buttonOff.addEventListener('click', () => {
    fetch('/led/off')
      .then(response => {
        console.log(response);
        showAlertOff(2);
        ledIsOn = false;
      })
      .catch(error => console.error(error));
  });

  
</script>



